---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Biblia 365 - Mi Amigo Anhelado">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js" is:inline></script>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700;900&family=Crimson+Text:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">

  <style is:inline>
    :root {
      --primary: #1a4d2e;
      --primary-light: #2d6a4f;
      --primary-dark: #0f2818;
      --accent: #d4a574;
      --accent-light: #e8c9a0;
      --accent-dark: #b8865f;
      --bg-main: #faf8f5;
      --bg-secondary: #f0ebe3;
      --surface: rgba(255, 255, 255, 0.95);
      --surface-elevated: rgba(255, 255, 255, 0.98);
      --text-main: #1a202c;
      --text-secondary: #4a5568;
      --text-muted: #718096;
      --border: rgba(212, 165, 116, 0.2);
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
      --shadow-md: 0 8px 24px rgba(0, 0, 0, 0.12);
      --shadow-lg: 0 20px 40px rgba(0, 0, 0, 0.15);
      --shadow-xl: 0 30px 60px rgba(0, 0, 0, 0.2);
      --transition-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    }

    body.dark-mode {
      --bg-main: #0a0e0d;
      --bg-secondary: #1a1f1e;
      --surface: rgba(30, 37, 34, 0.95);
      --surface-elevated: rgba(40, 47, 44, 0.98);
      --text-main: #f7fafc;
      --text-secondary: #e2e8f0;
      --text-muted: #a0aec0;
      --primary: #52b788;
      --primary-light: #74c69d;
      --primary-dark: #2d6a4f;
      --accent: #f4a261;
      --accent-light: #e9c46a;
      --accent-dark: #e76f51;
      --border: rgba(82, 183, 136, 0.25);
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      background: linear-gradient(135deg, var(--bg-main) 0%, var(--bg-secondary) 100%);
      background-attachment: fixed;
      color: var(--text-main);
      font-family: 'Crimson Text', Georgia, serif;
      line-height: 1.8;
      transition: all 0.4s var(--transition-smooth);
      overflow-x: hidden;
    }

    .main-container { max-width: 900px; margin: 0 auto; padding: 1.5rem; position: relative; z-index: 1; }

    .app-header { text-align: center; margin-bottom: 2.5rem; }
    .app-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(2.5rem, 8vw, 4.5rem);
      font-weight: 900;
      background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    /* Progress Ring */
    .progress-ring { display: flex; align-items: center; justify-content: center; gap: 1.5rem; margin: 1.5rem 0; }
    .ring-container { position: relative; width: 120px; height: 120px; }
    .ring-svg { transform: rotate(-90deg); }
    .ring-bg { fill: none; stroke: var(--border); stroke-width: 8; }
    .ring-progress { fill: none; stroke: var(--accent); stroke-width: 8; stroke-linecap: round; transition: stroke-dashoffset 1s; }
    .ring-text { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; }
    .ring-day { font-size: 2rem; font-weight: 700; color: var(--primary); }

    /* Controls */
    .control-panel {
      position: sticky; top: 20px; z-index: 100; background: var(--surface);
      backdrop-filter: blur(20px); padding: 1rem; border-radius: 24px;
      display: flex; justify-content: space-between; gap: 1rem;
      box-shadow: var(--shadow-lg); border: 2px solid var(--border); margin-bottom: 2rem;
    }

    .btn-tool {
      background: var(--primary); color: white; border: none; padding: 0.6rem 1.2rem;
      border-radius: 12px; cursor: pointer; font-weight: 600; transition: 0.3s;
    }

    /* Library Modal */
    #modalBiblioteca {
      position: fixed; inset: 0; background: rgba(0, 0, 0, 0.85);
      backdrop-filter: blur(15px); display: none; place-items: center; z-index: 1100; padding: 1rem;
    }

    .modal-content {
      background: var(--surface); width: 100%; max-width: 700px; max-height: 80vh;
      padding: 2rem; border-radius: 24px; overflow-y: auto; border: 2px solid var(--accent);
    }

    #gridLibros {
      display: grid; grid-template-columns: repeat(auto-fill, minmax(120px, 1fr)); gap: 1rem; margin-top: 1.5rem;
    }

    .btn-libro-grid {
      padding: 1rem; border: 1px solid var(--border); border-radius: 12px;
      background: var(--bg-main); color: var(--text-main); cursor: pointer;
      font-weight: 600; transition: 0.3s;
    }

    .btn-libro-grid:hover { background: var(--accent); color: white; transform: translateY(-3px); }

    /* Verses */
    .capitulo-acordeon { background: var(--surface); border-radius: 18px; margin-bottom: 1rem; border: 1px solid var(--border); overflow: hidden; }
    .header-info { background: var(--primary); color: white; padding: 1rem 1.5rem; cursor: pointer; display: flex; justify-content: space-between; }
    .versiculos { padding: 1.5rem; font-size: 20px; }
    .versiculo { padding: 0.5rem; border-radius: 8px; cursor: pointer; transition: 0.2s; }
    .versiculo:hover { background: rgba(212, 165, 116, 0.1); }
    .versiculo.active { border-left: 4px solid var(--accent); background: rgba(212, 165, 116, 0.1); }
    .num { color: var(--accent); font-weight: 700; margin-right: 0.5rem; }

    /* Actions Menu */
    .menu-acciones {
      position: fixed; bottom: 2rem; left: 50%; transform: translateX(-50%) translateY(100px);
      background: var(--surface-elevated); padding: 1rem; border-radius: 20px;
      display: flex; gap: 1rem; transition: 0.4s; border: 2px solid var(--accent); z-index: 1000; opacity: 0;
    }
    .menu-acciones.active { transform: translateX(-50%) translateY(0); opacity: 1; }

    .toast {
      position: fixed; bottom: 2rem; right: 2rem; background: var(--surface);
      padding: 1rem; border-radius: 12px; border: 2px solid var(--accent);
      transform: translateX(200%); transition: 0.4s; z-index: 2000;
    }
    .toast.show { transform: translateX(0); }
  </style>

  <div class="main-container">
    <header class="app-header">
      <h1 class="app-title">BIBLIA 365</h1>
      <p class="app-subtitle">Tu Plan Anual de Lectura</p>
      
      <div class="progress-ring">
        <div class="ring-container">
          <svg class="ring-svg" width="120" height="120">
            <circle class="ring-bg" cx="60" cy="60" r="52" />
            <circle id="ringProgress" class="ring-progress" cx="60" cy="60" r="52" stroke-dasharray="326.7" stroke-dashoffset="326.7" />
          </svg>
          <div class="ring-text">
            <div id="ringDay" class="ring-day">1</div>
            <div style="font-size: 0.7rem; color: var(--text-muted)">DE 365</div>
          </div>
        </div>
      </div>
    </header>

    <div class="control-panel">
      <button class="btn-tool" onclick="abrirBiblioteca()">ðŸ“š Biblioteca</button>
      <div style="display: flex; gap: 0.5rem;">
        <button class="btn-tool" onclick="cambiarTamano(-2)">A-</button>
        <button class="btn-tool" onclick="cambiarTamano(2)">A+</button>
        <button class="btn-tool" onclick="toggleModo()">ðŸŒ“</button>
      </div>
    </div>

    <div id="lecturaContenedor">
      </div>

    <div style="display: flex; gap: 1rem; margin: 2rem 0;">
      <button class="btn-tool" style="flex: 1" onclick="cambiarDia(-1)">â—€ Anterior</button>
      <button class="btn-tool" onclick="irAHoy()">Hoy</button>
      <button class="btn-tool" style="flex: 1" onclick="cambiarDia(1)">Siguiente â–¶</button>
    </div>
  </div>

  <div id="modalBiblioteca">
    <div class="modal-content">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <h2 style="font-family: 'Playfair Display'">Libros de la Biblia</h2>
        <button class="btn-tool" onclick="cerrarBiblioteca()">âœ•</button>
      </div>
      <input type="text" id="busquedaLibro" placeholder="Buscar libro..." oninput="filtrarLibros()" 
             style="width: 100%; padding: 0.8rem; margin-top: 1rem; border-radius: 12px; border: 1px solid var(--border);">
      <div id="gridLibros">
        </div>
    </div>
  </div>

  <div id="menuAcciones" class="menu-acciones">
    <button class="btn-tool" onclick="resaltar('sub-yellow')">ðŸŸ¨</button>
    <button class="btn-tool" onclick="resaltar('sub-green')">ðŸŸ©</button>
    <button class="btn-tool" onclick="resaltar('sub-blue')">ðŸŸ¦</button>
    <button class="btn-tool" onclick="copiarVersiculo()">ðŸ“‹ Copiar</button>
  </div>

  <script is:inline>
  // ... (aquÃ­ va tu lista de booksDB y la variable plan que ya tienes)

  // 1. ESTA FUNCIÃ“N ES LA QUE CARGA LOS LIBROS EN EL CUADRO
  function renderBiblioteca() {
    const grid = document.getElementById('gridLibros');
    if (!grid) return;

    grid.innerHTML = booksDB.map(libro => `
      <button onclick="seleccionarLibro('${libro.f}', '${libro.n}')">
        ${libro.n}
      </button>
    `).join('');
  }

  // 2. MODIFICA TU FUNCIÃ“N DE ABRIR PARA QUE LLAME A LA ANTERIOR
  window.abrirBiblioteca = () => {
    document.getElementById('modalBiblioteca').style.display = 'grid';
    renderBiblioteca(); // <--- Muy importante llamar esto aquÃ­
  };

  window.cerrarBiblioteca = () => {
    document.getElementById('modalBiblioteca').style.display = 'none';
  };

  // 3. FUNCIÃ“N PARA SELECCIONAR EL LIBRO
  window.seleccionarLibro = (f, n) => {
    cerrarBiblioteca();
    // Cargamos el capÃ­tulo 1 del libro seleccionado
    cargarLectura([{ n, f, c: 1 }]);
    window.scrollTo({ top: 0, behavior: 'smooth' });
    showToast(`Abriendo ${n}`, 'ðŸ“–');
  };

  // 4. ASEGÃšRATE DE QUE TU FUNCIÃ“N cargarLectura USE LA API CORRECTA
  async function cargarLectura(especifico = null) {
    const contenedor = document.getElementById('lecturaContenedor');
    contenedor.innerHTML = '<div class="skeleton" style="height:300px"></div>';

    let items = especifico;
    if (!especifico) {
      const hoy = new Date();
      const inicio = new Date(hoy.getFullYear(), 0, 0);
      const diaDelAnio = Math.floor((hoy - inicio) / 86400000);
      const startIdx = (diaDelAnio - 1) * 3;
      items = plan.slice(startIdx, startIdx + 3);
      updateProgressRing(diaDelAnio);
    }

    let html = '';
    for (const it of items) {
      try {
        // Usamos la API de Deno que es muy estable
        const res = await fetch(`https://bible-api.deno.dev/api/read/rvv1960/${it.f}/${it.c}`);
        const data = await res.json();
        
        html += `
          <details open class="capitulo-acordeon">
            <summary class="header-info">
              <h2>${it.n} ${it.c}</h2>
              <span>â–¼</span>
            </summary>
            <div class="versiculos">
              ${data.vers.map(v => `
                <div class="versiculo" onclick="activarMenu(this, '${it.n} ${it.c}:${v.number}', '${it.f}_${it.c}_${v.number}')">
                  <span class="num">${v.number}</span>
                  <span class="txt">${v.verse}</span>
                </div>
              `).join('')}
            </div>
          </details>
        `;
      } catch (e) {
        console.error("Error cargando:", it.n, e);
      }
    }
    contenedor.innerHTML = html || '<p>Error al cargar la lectura. Revisa tu conexiÃ³n.</p>';
  }

  // ... (el resto de tus funciones como activarMenu, resaltar, etc.)

  // Iniciar la aplicaciÃ³n
  document.addEventListener('DOMContentLoaded', () => {
    cargarLectura();
  });
</script>
</PageLayout>
