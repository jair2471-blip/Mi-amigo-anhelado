---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<PageLayout title="Blog de Reflexiones">
    <main class="blog-main">
        <section class="intro-text">
            <h1>Reflexiones de Fe</h1>
            <p>EnseÃ±anza pura para una vida transformada.</p>
        </section>

        <section>
            <ul>
                {
                    posts.map((post) => (
                        <li>
                            <a href={`/blog/${post.id}/`}>
                                {post.data.heroImage ? (
                                    <img width={720} height={360} src={post.data.heroImage} alt={post.data.title} />
                                ) : (
                                    /* ESTO SE MUESTRA SI NO HAY IMAGEN */
                                    <div class="placeholder-img">
                                        <span>ðŸ“–</span>
                                    </div>
                                )}
                                <div class="post-info">
                                    <h4 class="title">{post.data.title}</h4>
                                    <p class="date">
                                        {post.data.pubDate.toLocaleDateString('es-ES', {
                                            year: 'numeric',
                                            month: 'short',
                                            day: 'numeric',
                                        })}
                                    </p>
                                </div>
                            </a>
                        </li>
                    ))
                }
            </ul>
        </section>
    </main>
</PageLayout>

<style>
    .blog-main { width: 100%; max-width: 960px; margin: 0 auto; padding: 3rem 1rem; }
    .intro-text { text-align: center; margin-bottom: 3rem; }
    .intro-text h1 { font-family: 'Playfair Display', serif; font-size: 3rem; color: #1a4d2e; }
    
    ul { display: flex; flex-wrap: wrap; gap: 2rem; list-style-type: none; margin: 0; padding: 0; }
    ul li { 
        width: calc(50% - 1rem); background: white; border-radius: 15px; 
        overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.05); 
        transition: transform 0.3s ease; border: 1px solid rgba(0,0,0,0.05);
    }
    ul li:hover { transform: translateY(-5px); border-color: #d4a574; }
    ul li:first-child { width: 100%; margin-bottom: 1rem; text-align: center; }
    
    /* ESTILO DEL REEMPLAZO DE IMAGEN */
    .placeholder-img {
        width: 100%;
        height: 240px;
        background: linear-gradient(135deg, #1a4d2e 0%, #0d2b1a 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        position: relative;
    }
    .placeholder-img::after {
        content: "";
        position: absolute;
        inset: 15px;
        border: 1px solid rgba(212, 165, 116, 0.3);
        border-radius: 10px;
    }
    ul li:first-child .placeholder-img { height: 360px; }

    img { width: 100%; height: auto; object-fit: cover; }
    .post-info { padding: 1.5rem; }
    .title { margin: 0; color: #1a4d2e; line-height: 1.2; font-size: 1.5rem; font-family: 'Playfair Display', serif; }
    .date { margin-top: 0.5rem; color: #d4a574; font-weight: bold; font-size: 0.9rem; }
    ul li a { text-decoration: none; }

    @media (max-width: 720px) {
        ul { gap: 1rem; }
        ul li { width: 100%; }
        .placeholder-img { height: 180px; }
    }
</style>