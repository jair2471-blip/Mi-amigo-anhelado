---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Vivencias B√≠blicas - H√©roes de la Fe">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Crimson+Text:wght@400;600&display=swap" rel="stylesheet">

  <style is:inline>
    :root { --primary: #1a4d2e; --accent: #d4a574; --bg: #faf8f5; --text: #1a202c; --surface: #ffffff; }
    body.dark-mode { --bg: #0a0e0d; --text: #f7fafc; --surface: #1a1f1e; --primary: #52b788; }

    html, body { 
      margin: 0; padding: 0; width: 100%; min-height: 100vh; 
      display: flex; flex-direction: column; align-items: center; 
      background-color: var(--bg); color: var(--text); font-family: 'Crimson Text', serif; 
    }

    .main-container { width: 100%; max-width: 700px; padding: 20px; box-sizing: border-box; }

    /* Buscador Pro */
    .search-box {
      width: 100%; padding: 18px; border-radius: 50px; border: 1px solid rgba(0,0,0,0.1);
      background: var(--surface); color: var(--text); font-size: 1.1rem;
      margin-bottom: 30px; box-shadow: 0 4px 15px rgba(0,0,0,0.05); outline: none;
    }

    /* Estilo de Cajas (Tu "box" mejorado) */
    .vivencia-card {
      background: var(--surface); border-radius: 20px; padding: 30px;
      border-left: 8px solid var(--primary); box-shadow: 0 5px 20px rgba(0,0,0,0.05);
      margin-bottom: 25px; animation: slideIn 0.4s ease-out;
    }

    @keyframes slideIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }

    .vivencia-card h2 { font-family: 'Playfair Display'; color: var(--primary); font-size: 2rem; margin-top: 0; }
    .vivencia-card h3 { color: var(--accent); text-transform: uppercase; font-size: 0.9rem; letter-spacing: 1px; margin-bottom: 10px; }
    
    .section-divider { height: 1px; background: rgba(0,0,0,0.05); margin: 20px 0; }

    .btn-nav {
      width: 100%; padding: 18px; border-radius: 50px; border: none;
      background: var(--primary); color: white; font-weight: bold;
      cursor: pointer; font-size: 1rem; transition: 0.3s; margin-bottom: 15px;
    }
    .btn-secondary { background: var(--surface); color: var(--text); border: 1px solid rgba(0,0,0,0.1); }

    .nav-links { display: flex; gap: 10px; justify-content: center; margin-top: 20px; }
    .nav-links a { color: var(--accent); text-decoration: none; font-weight: bold; font-size: 0.9rem; }
  </style>

  <div class="main-container">
    <header style="text-align:center; padding: 40px 0;">
      <h1 style="font-family: 'Playfair Display'; font-size: 2.5rem; color: var(--primary); margin:0;">Vivencias B√≠blicas</h1>
      <p id="contador" style="color:var(--accent); font-weight:bold; margin-top:10px;">Cargando devocionales...</p>
    </header>

    <input type="text" id="buscador" class="search-box" placeholder="üîç Buscar personaje (David, Ester, Pablo...)" />

    <div id="contenido-vivencia">
      </div>

    <button onclick="window.siguiente()" class="btn-nav">üëâ Siguiente Historia</button>
    <button onclick="window.toggleNoche()" class="btn-nav btn-secondary">üåì Cambiar Ambiente</button>

    <div class="nav-links">
      <a href="/">üè† Volver al Plan 365</a>
    </div>
  </div>

  <script is:inline>
  const url = "https://raw.githubusercontent.com/jair2471-blip/vivenciasbiblicas/main/vivencias-biblia.json";
  let vivencias = [];
  let indice = 0;

  async function cargar() {
    try {
      const r = await fetch(url);
      const data = await r.json();
      
      // Limpiamos la lista por si acaso
      vivencias = [];
      
      // Extraemos todos los personajes correctamente
      Object.values(data.personajes).forEach(p => {
        Object.values(p).forEach(v => {
          // Guardamos el objeto completo de la vivencia
          vivencias.push(v);
        });
      });

      // √çndice diario por defecto
      const hoy = Math.floor(Date.now() / 86400000);
      indice = hoy % vivencias.length;

      // REVISAR SI VIENE B√öSQUEDA DESDE EL INICIO
      const params = new URLSearchParams(window.location.search);
      const query = params.get('buscar');
      if (query) {
        buscarPersonaje(query);
      } else {
        pintar();
      }
    } catch (e) {
      console.error("Error cargando vivencias:", e);
    }
  }

  // FUNCI√ìN DE B√öSQUEDA INDEPENDIENTE
  function buscarPersonaje(nombre) {
    const busqueda = nombre.toLowerCase().trim();
    
    // Buscamos el primer personaje que coincida
    const encontrado = vivencias.find(v => 
      v.personaje.toLowerCase().includes(busqueda)
    );

    if (encontrado) {
      indice = vivencias.indexOf(encontrado);
      pintar();
    } else {
      // Si no lo encuentra, podemos dar un aviso peque√±o
      console.log("No se encontr√≥ el personaje: " + nombre);
    }
  }

  // EVENTO PARA EL INPUT DEL BUSCADOR
  // Aseg√∫rate de que tu input tenga id="buscador"
  document.addEventListener('DOMContentLoaded', () => {
    cargar(); // Iniciamos la carga

    const inputBuscador = document.getElementById("buscador");
    if (inputBuscador) {
      inputBuscador.addEventListener("input", (e) => {
        buscarPersonaje(e.target.value);
      });
    }
  });

  // (Mantenemos la funci√≥n pintar y siguiente igual que antes...)
  function pintar() {
    const v = vivencias[indice];
    if(!v) return;
    document.getElementById("contador").innerText = `üìò RELATO ${indice + 1} DE ${vivencias.length}`;
    document.getElementById("contenido-vivencia").innerHTML = `
      <div class="vivencia-card">
        <h3>üåü HISTORIA</h3>
        <h2>${v.personaje}</h2>
        <p><strong>${v.categoria}</strong></p>
        <p style="font-size:1.2rem;">${v.vivencia}</p>
        <hr/>
        <h3>‚úùÔ∏è VERS√çCULO</h3>
        <p><em>"${v.versiculo}"</em></p>
        <p><small>${v.extra}</small></p>
        <hr/>
        <h3>üôè ORACI√ìN</h3>
        <p>${v.oracion}</p>
      </div>
    `;
  }

  window.siguiente = () => {
    indice = (indice + 1) % vivencias.length;
    pintar();
  };
</script>
</PageLayout>
