---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Vivencias B√≠blicas - H√©roes de la Fe">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Crimson+Text:wght@400;600&display=swap" rel="stylesheet">

  <style is:inline>
    :root { --primary: #1a4d2e; --accent: #d4a574; --bg: #faf8f5; --text: #1a202c; --surface: #ffffff; }
    body.dark-mode { --bg: #0a0e0d; --text: #f7fafc; --surface: #1a1f1e; --primary: #52b788; }

    html, body { 
      margin: 0; padding: 0; width: 100%; min-height: 100vh; 
      display: flex; flex-direction: column; align-items: center; 
      background-color: var(--bg); color: var(--text); font-family: 'Crimson Text', serif; 
    }

    .main-container { width: 100%; max-width: 700px; padding: 20px; box-sizing: border-box; }

    /* Buscador Pro */
    .search-box {
      width: 100%; padding: 18px; border-radius: 50px; border: 1px solid rgba(0,0,0,0.1);
      background: var(--surface); color: var(--text); font-size: 1.1rem;
      margin-bottom: 30px; box-shadow: 0 4px 15px rgba(0,0,0,0.05); outline: none;
    }

    /* Estilo de Cajas (Tu "box" mejorado) */
    .vivencia-card {
      background: var(--surface); border-radius: 20px; padding: 30px;
      border-left: 8px solid var(--primary); box-shadow: 0 5px 20px rgba(0,0,0,0.05);
      margin-bottom: 25px; animation: slideIn 0.4s ease-out;
    }

    @keyframes slideIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }

    .vivencia-card h2 { font-family: 'Playfair Display'; color: var(--primary); font-size: 2rem; margin-top: 0; }
    .vivencia-card h3 { color: var(--accent); text-transform: uppercase; font-size: 0.9rem; letter-spacing: 1px; margin-bottom: 10px; }
    
    .section-divider { height: 1px; background: rgba(0,0,0,0.05); margin: 20px 0; }

    .btn-nav {
      width: 100%; padding: 18px; border-radius: 50px; border: none;
      background: var(--primary); color: white; font-weight: bold;
      cursor: pointer; font-size: 1rem; transition: 0.3s; margin-bottom: 15px;
    }
    .btn-secondary { background: var(--surface); color: var(--text); border: 1px solid rgba(0,0,0,0.1); }

    .nav-links { display: flex; gap: 10px; justify-content: center; margin-top: 20px; }
    .nav-links a { color: var(--accent); text-decoration: none; font-weight: bold; font-size: 0.9rem; }
  </style>

  <div class="main-container">
    <header style="text-align:center; padding: 40px 0;">
      <h1 style="font-family: 'Playfair Display'; font-size: 2.5rem; color: var(--primary); margin:0;">Vivencias B√≠blicas</h1>
      <p id="contador" style="color:var(--accent); font-weight:bold; margin-top:10px;">Cargando devocionales...</p>
    </header>

    <input type="text" id="buscador" class="search-box" placeholder="üîç Buscar personaje (David, Ester, Pablo...)" />

    <div id="contenido-vivencia">
      </div>

    <button onclick="window.siguiente()" class="btn-nav">üëâ Siguiente Historia</button>
    <button onclick="window.toggleNoche()" class="btn-nav btn-secondary">üåì Cambiar Ambiente</button>

    <div class="nav-links">
      <a href="/">üè† Volver al Plan 365</a>
    </div>
  </div>

<script is:inline>
  const url = "https://raw.githubusercontent.com/jair2471-blip/vivenciasbiblicas/main/vivencias-biblia.json";
  let vivencias = []; // Aqu√≠ meteremos las 64 historias una por una
  let indice = 0;

  async function cargar() {
    try {
      const r = await fetch(url);
      const data = await r.json();
      
      vivencias = []; 

      if (data && data.personajes) {
        // 1. Entramos a los nombres (Josu√©, Mois√©s...)
        for (const nombre in data.personajes) {
          const bloquePersonaje = data.personajes[nombre];
          
          // 2. Entramos a cada historia numerada (1, 2, 3... 10)
          for (const num in bloquePersonaje) {
            const v = bloquePersonaje[num];
            
            if (v) {
              // IMPORTANTE: Si el objeto no trae el nombre adentro, 
              // le ponemos el nombre de la "familia" (la clave del JSON)
              if (!v.personaje) v.personaje = nombre;
              
              vivencias.push(v);
            }
          }
        }
      }

      console.log("¬°Motor cargado! Total de historias encontradas:", vivencias.length);

      // Configuraci√≥n inicial
      const params = new URLSearchParams(window.location.search);
      const query = params.get('buscar');
      
      if (query) {
        ejecutarBusqueda(query);
      } else {
        const hoy = Math.floor(Date.now() / 86400000);
        indice = hoy % vivencias.length;
        pintar();
      }

    } catch (e) {
      console.error("Error en la carga:", e);
      document.getElementById("contenido-vivencia").innerHTML = "‚ùå Error al conectar con el servidor de historias.";
    }
  }

  function ejecutarBusqueda(texto) {
    if (!texto || vivencias.length === 0) return;
    const t = texto.toLowerCase().trim();
    
    // El buscador ahora encuentra la PRIMERA coincidencia de ese personaje
    const nuevoIndice = vivencias.findIndex(v => 
      v.personaje.toLowerCase().includes(t) || 
      (v.categoria && v.categoria.toLowerCase().includes(t))
    );

    if (nuevoIndice !== -1) {
      indice = nuevoIndice;
      pintar();
    }
  }

  function pintar() {
    const v = vivencias[indice];
    if (!v) return;

    // Actualizamos el contador para que el usuario sepa en qu√© n√∫mero va
    const contElem = document.getElementById("contador");
    if (contElem) contElem.innerText = `üìñ HISTORIA ${indice + 1} DE ${vivencias.length}`;
    
    const area = document.getElementById("contenido-vivencia");
    area.innerHTML = `
      <div class="vivencia-card" style="animation: slideUp 0.4s ease;">
        <h3 style="color:var(--accent); text-transform:uppercase; letter-spacing:1px;">üåü Devocional de Personaje</h3>
        <h2 style="font-family:'Playfair Display'; font-size:2.8rem; color:var(--primary); margin:10px 0;">${v.personaje}</h2>
        
        <div style="background:var(--accent); color:white; display:inline-block; padding:4px 12px; border-radius:4px; font-size:0.8rem; font-weight:bold; margin-bottom:20px;">
          TEMA: ${v.categoria || 'Vivencia'}
        </div>
        
        <div style="font-size:1.3rem; line-height:1.8; color:var(--text); text-align:justify; margin-bottom:30px;">
          ${v.vivencia}
        </div>
        
        <div style="background:rgba(0,0,0,0.03); padding:25px; border-radius:15px; border-left:6px solid var(--primary); margin-bottom:25px;">
          <h3 style="margin-top:0; color:var(--primary);">‚úùÔ∏è LA PALABRA</h3>
          <p style="font-style:italic; font-size:1.4rem;">"${v.versiculo}"</p>
          <p style="margin-bottom:0; font-weight:bold; color:var(--accent);"><small>${v.extra || ''}</small></p>
        </div>

        <div style="background:var(--primary); color:white; padding:25px; border-radius:15px; box-shadow:0 8px 20px rgba(0,0,0,0.1);">
          <h3 style="margin-top:0; color:var(--accent);">üôè ORACI√ìN</h3>
          <p style="font-size:1.1rem; line-height:1.6; margin:0;">${v.oracion}</p>
        </div>
      </div>
    `;
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  // BOT√ìN SIGUIENTE: Ahora navegar√° por las 64 historias una tras otra
  window.siguiente = () => {
    if (vivencias.length > 0) {
      indice = (indice + 1) % vivencias.length;
      pintar();
    }
  };

  document.addEventListener('DOMContentLoaded', () => {
    cargar();
    const inputB = document.getElementById("buscador");
    if (inputB) {
      inputB.addEventListener("input", (e) => ejecutarBusqueda(e.target.value));
    }
  });
</script>
</PageLayout>
