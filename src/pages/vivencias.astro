---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Vivencias B√≠blicas - H√©roes de la Fe">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Crimson+Text:wght@400;600&display=swap" rel="stylesheet">

  <style is:inline>
    :root { --primary: #1a4d2e; --accent: #d4a574; --bg: #faf8f5; --text: #1a202c; --surface: #ffffff; }
    body.dark-mode { --bg: #0a0e0d; --text: #f7fafc; --surface: #1a1f1e; --primary: #52b788; }

    html, body { 
      margin: 0; padding: 0; width: 100%; min-height: 100vh; 
      display: flex; flex-direction: column; align-items: center; 
      background-color: var(--bg); color: var(--text); font-family: 'Crimson Text', serif; 
    }

    .main-container { width: 100%; max-width: 700px; padding: 20px; box-sizing: border-box; }

    /* Buscador Pro */
    .search-box {
      width: 100%; padding: 18px; border-radius: 50px; border: 1px solid rgba(0,0,0,0.1);
      background: var(--surface); color: var(--text); font-size: 1.1rem;
      margin-bottom: 30px; box-shadow: 0 4px 15px rgba(0,0,0,0.05); outline: none;
    }

    /* Estilo de Cajas (Tu "box" mejorado) */
    .vivencia-card {
      background: var(--surface); border-radius: 20px; padding: 30px;
      border-left: 8px solid var(--primary); box-shadow: 0 5px 20px rgba(0,0,0,0.05);
      margin-bottom: 25px; animation: slideIn 0.4s ease-out;
    }

    @keyframes slideIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }

    .vivencia-card h2 { font-family: 'Playfair Display'; color: var(--primary); font-size: 2rem; margin-top: 0; }
    .vivencia-card h3 { color: var(--accent); text-transform: uppercase; font-size: 0.9rem; letter-spacing: 1px; margin-bottom: 10px; }
    
    .section-divider { height: 1px; background: rgba(0,0,0,0.05); margin: 20px 0; }

    .btn-nav {
      width: 100%; padding: 18px; border-radius: 50px; border: none;
      background: var(--primary); color: white; font-weight: bold;
      cursor: pointer; font-size: 1rem; transition: 0.3s; margin-bottom: 15px;
    }
    .btn-secondary { background: var(--surface); color: var(--text); border: 1px solid rgba(0,0,0,0.1); }

    .nav-links { display: flex; gap: 10px; justify-content: center; margin-top: 20px; }
    .nav-links a { color: var(--accent); text-decoration: none; font-weight: bold; font-size: 0.9rem; }
  </style>

  <div class="main-container">
    <header style="text-align:center; padding: 40px 0;">
      <h1 style="font-family: 'Playfair Display'; font-size: 2.5rem; color: var(--primary); margin:0;">Vivencias B√≠blicas</h1>
      <p id="contador" style="color:var(--accent); font-weight:bold; margin-top:10px;">Cargando devocionales...</p>
    </header>

    <input type="text" id="buscador" class="search-box" placeholder="üîç Buscar personaje (David, Ester, Pablo...)" />

    <div id="contenido-vivencia">
      </div>

    <button onclick="window.siguiente()" class="btn-nav">üëâ Siguiente Historia</button>
    <button onclick="window.toggleNoche()" class="btn-nav btn-secondary">üåì Cambiar Ambiente</button>

    <div class="nav-links">
      <a href="/">üè† Volver al Plan 365</a>
    </div>
  </div>

<script is:inline>
  const url = "https://raw.githubusercontent.com/jair2471-blip/vivenciasbiblicas/main/vivencias-biblia.json";
  let vivencias = [];
  let indice = 0;

  async function cargar() {
    try {
      console.log("Iniciando despegue de datos...");
      const r = await fetch(url);
      const data = await r.json();
      
      vivencias = []; // Limpieza total

      // ESTA ES LA CIRUG√çA: Recorremos personajes -> nombres -> vivencias
      if (data && data.personajes) {
        const nombres = Object.keys(data.personajes); // ['Josu√©', 'Mois√©s', 'David', etc.]
        
        nombres.forEach(nombre => {
          const contenidoPersonaje = data.personajes[nombre];
          
          // Como cada personaje tiene objetos adentro (1, 2, 3...)
          Object.values(contenidoPersonaje).forEach(v => {
            // Solo lo guardamos si tiene los datos que necesitamos
            if (v && v.personaje) {
              vivencias.push(v);
            }
          });
        });
      }

      console.log("¬°Cargados con √©xito! Total vivencias encontradas:", vivencias.length);
      console.log("Lista de nombres disponibles:", vivencias.map(v => v.personaje));

      // Si no carg√≥ nada, avisar
      if (vivencias.length === 0) {
        document.getElementById("contenido-vivencia").innerHTML = "‚ö†Ô∏è No se encontraron datos en el JSON.";
        return;
      }

      // √çndice diario
      const hoy = Math.floor(Date.now() / 86400000);
      indice = hoy % vivencias.length;

      // Verificamos si viene b√∫squeda del inicio
      const params = new URLSearchParams(window.location.search);
      const query = params.get('buscar');
      if (query) {
        buscarPersonaje(query);
      } else {
        pintar();
      }

    } catch (e) {
      console.error("Error cr√≠tico:", e);
      document.getElementById("contenido-vivencia").innerHTML = "‚ùå Error de conexi√≥n con el sat√©lite de datos.";
    }
  }

  function buscarPersonaje(texto) {
    if (!texto || vivencias.length === 0) return;
    
    const busqueda = texto.toLowerCase().trim();
    console.log("Buscando a:", busqueda);

    // Buscamos en toda la lista aplanada
    const idxEncontrado = vivencias.findIndex(v => 
      v.personaje.toLowerCase().includes(busqueda) || 
      (v.categoria && v.categoria.toLowerCase().includes(busqueda))
    );

    if (idxEncontrado !== -1) {
      console.log("¬°Encontrado en posici√≥n!", idxEncontrado);
      indice = idxEncontrado;
      pintar();
    } else {
      console.log("No hubo suerte con esa b√∫squeda.");
    }
  }

  function pintar() {
    const v = vivencias[indice];
    if (!v) return;

    const contenedor = document.getElementById("contenido-vivencia");
    const contador = document.getElementById("contador");

    if (contador) contador.innerText = `üìò VIVENCIA ${indice + 1} DE ${vivencias.length}`;
    
    // El dise√±o que a usted le gusta
    contenedor.innerHTML = `
      <div class="vivencia-card">
        <h3 style="color:var(--accent)">üåü PERSONAJE SAGRADO</h3>
        <h2 style="font-family:'Playfair Display'; font-size:2.5rem; margin:10px 0;">${v.personaje}</h2>
        <div style="background:var(--primary); color:white; display:inline-block; padding:5px 15px; border-radius:20px; font-size:0.8rem; margin-bottom:20px;">
          TEMA: ${v.categoria}
        </div>
        
        <p style="font-size:1.3rem; line-height:1.8; color:var(--text); text-align:justify;">${v.vivencia}</p>
        
        <div style="border-top: 1px solid rgba(0,0,0,0.1); margin:25px 0; padding-top:20px;">
          <h3 style="color:var(--accent)">‚úùÔ∏è LA PROMESA</h3>
          <p style="font-style:italic; font-size:1.3rem; color:var(--primary);">"${v.versiculo}"</p>
          <p><small>${v.extra}</small></p>
        </div>

        <div style="background:rgba(212, 165, 116, 0.1); padding:25px; border-radius:15px; border-left: 5px solid var(--accent);">
          <h3 style="margin-top:0;">üôè ORACI√ìN</h3>
          <p style="font-size:1.1rem; margin-bottom:0;">${v.oracion}</p>
        </div>
      </div>
    `;
    // Scroll arriba para leer bien
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  window.siguiente = () => {
    if (vivencias.length > 0) {
      indice = (indice + 1) % vivencias.length;
      pintar();
    }
  };

  // ARRANCAMOS
  document.addEventListener('DOMContentLoaded', () => {
    cargar();
    
    const buscadorInput = document.getElementById("buscador");
    if (buscadorInput) {
      buscadorInput.addEventListener("input", (e) => {
        buscarPersonaje(e.target.value);
      });
    }
  });
</script>
</PageLayout>
